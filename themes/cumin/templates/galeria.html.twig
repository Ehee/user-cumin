<div class="pure-g" style="text-align:center; margin:auto;">
	{% for image in media.images %}
		<div class="pure-u-1 pure-u-sm-1-2 pure-u-md-1-3 pure-u-lg-1-4 pure-u-xl-1-5">
			<div class="galeria-bg" style="background-image: url( {{ image.cropResize(500,300).url() }});" >
				<a rel="lightbox-gallery" href="{{image.url()}}">
					<img class="pure-img" src="{{image.cropResize(500,300).url()}}" style="opacity:0;" />
				</a>
			</div>
		</div>
	{% endfor %}
</div>